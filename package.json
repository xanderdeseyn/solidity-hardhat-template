    "ethers": "^5.0.19",
    "hardhat": "^2.0.1",
    "hardhat-watcher": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.1-solc-0.7",
